@{
    ViewData["Title"] = "Download";
}


@model IEnumerable<Sincronizador_de_legendas.Models.Arquivos>
<h2>Legendas formatadas</h2>
<p>
</p>
<table>
    <tr>
        <th>
            ID
        </th>
        <th>
            Nome
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Download", "Download", new { id = item.ID })
            </td>
        </tr>
    }
</table>